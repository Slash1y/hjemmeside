{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    }
  },
  "exclude": ["node_modules", ".nuxt", "dist"],

  "vue/multi-word-component-names": ["error", {
    "ignores": [
      "experience",
      "about",
      "index",
      "error",
      "default"
    ]
  }]
}
